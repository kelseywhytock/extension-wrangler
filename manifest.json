{
  "manifest_version": 3,
  "name": "Extension Wrangler",
  "version": "1.0",
  "description": "Wrangle your Chrome extensions with custom groups and bulk controls",
  "permissions": [
    "management",
    "storage"
  ],
  "options_page": "settings.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extension Organizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}